
{% extends "base.html.twig" %}
{% block body %}
{% if leer %}
    <h3>Keine Antwort vorhanden zur Frage:</h3>
		<p><b> {{ f_name }}</b></p>
{% else %}
<h3>{{ f_name }}</h3>
<table class="overview">
	<tr>
		<th>id</th>
		<th>f_Id</th>
		<th>Antwort</th>
		<th>Auswertungsbereich</th>
		<th>Fragentyp</th>

	</tr>

	{% for row in data %}
		<tr>
			<td>{{ row.id }}</td>
			<td>{{ row.f_id }}</td>
			<td>{{ row.antwort }}</td>
			<td>{{ row.auswertungsbereich }}</td>
			<td>{{ row.ftype }}</td>
			</tr>
	{% endfor %}

</table>
{% endif %}
{% if umfrage %}
  <p><a href="{{ path('Responsa_overview', {'u_id': u_id}) }}">Zurück zur Übersicht</a></p>
{% else %}
  <p><a href="{{ path('Responsa_frage_overview', {'u_id': u_id}) }}">Zurück zur Übersicht</a></p>

{% endif %}
<style>
.overview, .overview tr, .overview tr th, .overview tr td{
	border: 1px solid #888888;
	padding: 2px;
}
</style>
{% endblock %}