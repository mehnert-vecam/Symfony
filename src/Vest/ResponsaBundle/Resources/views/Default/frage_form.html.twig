{% extends "VestSharedBundle:turbulence:base.html.twig" %}
{% block contentinner %}

<div class="panel panel-default">
	<div class="panel-heading">
		{% if new == true%}
			<h3>Umfrage bearbeiten</h3>
		{% else%}
			<h3>Neue Umfrage erstellen</h3>
		{% endif %}
	</div>
	<div class="panel-body">
		<div class="col-md-3"> 
			{{ form_start(form) }}      <!-- Start des Formularbereits -->
					{{ form_errors(form) }}  <!-- Ausgabe von Fehler die erzeugt werden. -->

					<div class="task_wrapper">
							{{ form_label(form.frage, 'Frage') }}   <br />
							{{ form_errors(form.frage) }}
							{{ form_widget(form.frage) }}
					</div>
					<div class="task_wrapper">
							{{ form_label(form.prio, 'Priorit√§t') }}   <br />
							{{ form_errors(form.prio) }}
							{{ form_widget(form.prio) }}
					</div>
					<div class="task_wrapper">
							{{ form_label(form.auswertungsbereich, 'Auswertungsbereich') }}   <br />
							{{ form_errors(form.auswertungsbereich) }}
							{{ form_widget(form.auswertungsbereich) }}
					</div>
					<div class="task_wrapper">
							{{ form_label(form.type, 'Fragentyp') }}   <br />
							{{ form_errors(form.type) }}
							{{ form_widget(form.type) }}
					</div>


					<div class="button_wrapper">
							{{ form_widget(form.Speichern) }}
					</div>

			{{ form_end(form) }}  <!-- Ende des Formularbereits -->


		</div>				
	</div>
</div>


{% endblock %}