{% extends "VestSharedBundle:turbulence:base.html.twig" %}
{% block contentinner %}


<div class="panel panel-default">
	<div class="panel-heading">
		<h3>{{u_name}}</h3>
	</div>
  <div class="panel-body">
		{{ form_start(form) }}      <!-- Start des Formularbereits -->
				{{ form_errors(form) }}  <!-- Ausgabe von Fehler die erzeugt werden. -->

				{% for item in form.s_antwort %}

				<div class="task_wrapper skalar_frage">
					{{fragen[loop.index0]}} <br />
							{{ form_errors(item) }}
							{{ form_widget(item) }}
				</div>
				{% endfor %}
				
				{% for item in form.f_antwort %}

				<div class="task_wrapper">
					{{fragen[loop.index0]}} <br />
							{{ form_errors(item) }}
							{{ form_widget(item) }}
				</div>
				{% endfor %}

				<div class="task_wrapper">
							{{ form_errors(form.s_f_id) }}
							{{ form_widget(form.s_f_id) }}
				</div>
				<div class="task_wrapper">
							{{ form_errors(form.f_f_id) }}
							{{ form_widget(form.f_f_id) }}
				</div>


				<div class="button_wrapper">
						{{ form_widget(form.Speichern) }}
				</div>

		{{ form_end(form) }}  <!-- Ende des Formularbereits -->

  </div>
</div>



{% endblock %}